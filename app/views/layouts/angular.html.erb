<!DOCTYPE html>
<html ng-app="radd" ng-controller="AppCtrl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GovDash</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <!-- Font Awesome -->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <%= csrf_meta_tags %>
</head>

<body class="overflow-hidden">
<div class="wrapper preload">

    <header class="top-nav"  ng-cloak>
        <div class="top-nav-inner">
            <div class="nav-header">
                <button type="button" class="navbar-toggle pull-left sidebar-toggle" id="sidebarToggleSM">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <ul class="nav-notification pull-right">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog fa-lg"></i></a>
                        <span class="badge badge-danger bounceIn">1</span>
                        <ul class="dropdown-menu dropdown-sm pull-right user-dropdown">
                            <li class="user-avatar">
                                <!--
                                <img src="images/profile/profile1.jpg" alt="" class="img-circle">
                                -->
                                <div class="user-content">
                                    <h5 class="no-m-bottom">Jane Doe</h5>
                                    <div class="m-top-xs">
                                        <a href="profile.html" class="m-right-sm">Profile</a>
                                        <a href="signin.html">Log out</a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <a href="inbox.html">
                                    Inbox
                                    <span class="badge badge-danger bounceIn animation-delay2 pull-right">1</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Notification
                                    <span class="badge badge-purple bounceIn animation-delay3 pull-right">2</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="sidebarRight-toggle">
                                    Message
                                    <span class="badge badge-success bounceIn animation-delay4 pull-right">7</span>
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="#">Setting</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <a href="{{ headerRedirect }}" class="brand">
                    <i class="fa fa-database"></i><span class="brand-name">GOVDASH</span>
                </a>
            </div>
            <div class="nav-container">
                <div class="pull-right m-right-sm" ng-show="loggedInUser">
                    <div class="user-block hidden-xs">
                        <a href="" data-toggle="dropdown">
                            <div class="user-detail inline-block">
                                Settings
                                <i class="fa fa-angle-down"></i>
                            </div>
                        </a>
                        <div class="panel border dropdown-menu user-panel">
                            <div class="panel-body paddingTB-sm">
                                <ul>
                                    <li><a href="#/accounts">Social Media Accounts</a></li>
                                    <li><a href="#/config">My Configuration</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="user-block hidden-xs">
                        <a href="" data-toggle="dropdown">
                            <div class="user-detail inline-block">
                                {{ email }}
                                <i class="fa fa-angle-down"></i>
                            </div>
                        </a>
                        <div class="panel border dropdown-menu user-panel">
                            <div class="panel-body paddingTB-sm">
                                <ul>
                                    <li>
                                        <a ng-click="logout('/users/login')" style="cursor: pointer">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pull-right m-right-sm" ng-show="!loggedInUser">
                    <div class="user-block hidden-xs">
                        <a href="#/users/login">
                            <div class="user-detail inline-block">
                                Login
                            </div>
                        </a>
                    </div>
                    <div class="user-block hidden-xs">
                        <a href="#/users/register">
                            <div class="user-detail inline-block">
                                Register
                            </div>
                        </a>
                    </div>

                </div>
            </div>
        </div><!-- ./top-nav-inner -->
    </header>


    <div class="container">



        <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->



        <div ng-view></div>


    </div>




    <footer class="footer" style="margin-left: 0">
				<span class="footer-brand">
					<strong class="text-danger">Gov</strong> Dash
				</span>
        <p class="no-margin">
            &copy; 2015 <strong>Gov Dash</strong>. ALL Rights Reserved.
        </p>
    </footer>
</div><!-- /wrapper -->

<%= javascript_include_tag "application" %>



<script>

    function loadModal () {
        $('#largeModal').modal('show');

        $('body').on('click','#closeModal', function() {
            $('#largeModal').modal('hide');
        });
    }

</script>

</body>

</html>
